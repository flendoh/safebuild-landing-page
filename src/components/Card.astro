---
const { title, description, image, alt } = Astro.props;
---

<article class="card">
    <img src={image} alt={alt} />
    <h3>{title}</h3>
    <p>{description}</p>
</article>

<style>
    .card {
        background-color: #fff;
        max-width: 370px;
        width: 100%;
        height: 370px;
        border-radius: 10px;
        box-shadow: 20px 20px 30px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        text-align: center;
        transition: all 0.3s ease;
    }
    img{
        margin-top: 2rem;
    }
    h3{
        font-size: 26px;
    }
    p{
        font-size: 18px;
        max-width: 270px;
        margin: 0 auto;
        margin-top: 1rem;
    }
    .card:hover {
        transform: scale(1.02);
    }
</style>
